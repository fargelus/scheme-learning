(define (abs x)
  (cond ((> x 0) x)
        ((= x 0) 0)
        ((< x 0) (- x))
  )
)

(define (abs_2 x)
  (cond ((< x 0) (- x))
        (else x)
  )
)

(define (abs_3 x)
  (if (< x 0) (- x) x)
)

